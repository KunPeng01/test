<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exception.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="Product Id"/>
            <Entry x:Name="IdEntry" Placeholder="Product ID, e.g. 101"/>

            <Label Text="Product Name"/>
            <Entry x:Name="NameEntry" Placeholder="Product Name, e.g. Laptop"/>

            <Label Text="Price"/>
            <Entry x:Name="PriceEntry" Placeholder="Price of the product, e.g. 100.99"/>

            <Label Text="Stock"/>
            <Entry x:Name="StockEntry" Placeholder="Stock level, e.g. 10"/>

            <Button 
                Text="Add Product"
                Clicked="OnAddProduct"
                />

            <HorizontalStackLayout>
                <Entry x:Name="UnitsEntry"/>
                
                <Button  Text="Sell Product"
                    Clicked="OnSellProduct"
                />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

